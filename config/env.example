# =============================================================================
# EPCID Environment Configuration
# =============================================================================
# Copy this file to .env in the project root and configure your settings

# =============================================================================
# Application Settings
# =============================================================================
EPCID_ENV=development
EPCID_DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# Backend API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8090
CORS_ORIGINS=http://localhost:3011,http://127.0.0.1:3011

# =============================================================================
# Frontend Configuration
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8090
FRONTEND_PORT=3011
NEXT_PUBLIC_APP_NAME=EPCID
NEXT_PUBLIC_APP_VERSION=2.0.0

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL (Production - use with Docker Compose)
DATABASE_URL=postgresql://epcid:epcid_secret@localhost:5432/epcid

# SQLite (Development - simple local setup)
# DATABASE_URL=sqlite:///./data/epcid.db

# Individual PostgreSQL settings (alternative)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=epcid
POSTGRES_USER=epcid
POSTGRES_PASSWORD=epcid_secret
POSTGRES_SSL=prefer

# =============================================================================
# Redis Cache (Optional)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_SSL=false

# =============================================================================
# Security
# =============================================================================
JWT_SECRET_KEY=your-super-secret-key-change-in-production-min-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# External API Keys (Optional - for enhanced features)
# =============================================================================
# Air Quality
AIRNOW_API_KEY=
OPENAQ_API_KEY=

# Weather
NOAA_API_KEY=
OPENWEATHER_API_KEY=

# FDA Drug Information
OPENFDA_API_KEY=

# =============================================================================
# FHIR/EHR Integration (Optional)
# =============================================================================
FHIR_CLIENT_ID=
FHIR_CLIENT_SECRET=
FHIR_BASE_URL=https://launch.smarthealthit.org/v/r4/fhir

# =============================================================================
# Monitoring & Alerts (Optional)
# =============================================================================
OTEL_ENDPOINT=http://localhost:4317
SLACK_WEBHOOK_URL=
PAGERDUTY_KEY=
